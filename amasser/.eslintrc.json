{
  "extends": [
    "@typescript-eslint/recommended",
    "eslint:recommended",
    "js:recommended"
  ],
  "env": {
    "browser": true,
    "es2020": true,
    "webextensions": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn"
  }
}
