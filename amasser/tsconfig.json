{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["chrome"]
  },
  "include": ["types.d.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
